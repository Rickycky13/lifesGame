from p5 import *

celluleVivante = []

def setup():
    size(800,800)
    fill(0)


def draw():
    global celluleVivante
    background(255)
    fill(0,255,0)
    rect(multProche(mouse_x,50),multProche(mouse_y,50),50,50)
    for i in range(len(celluleVivante)):
        fill(0)
        rect(celluleVivante[i][0],celluleVivante[i][1],50,50)

def mouse_pressed():
    global celluleVivante
    celluleVivante.append((multProche(mouse_x,50),multProche(mouse_y,50)))

def multProche(val,mult):
    return (val//mult) * mult

def evolution():
    """ fonction a activer dans draw qui s'occupe de toute l'évolution avec les trois règles"""
    if mouse_is_pressed:
        pass

run()
